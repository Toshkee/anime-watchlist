<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Anime</title>
  <link rel="stylesheet" href="/add.css">
</head>

<body>
  <!-- Navbar -->
  <%- include('partials/navbar'); %>

  <!-- Background images -->
  <img src="/assets/luffy.png" alt="Luffy" class="luffy">
  <img src="/assets/luffy2.png" alt="Luffy 2" class="luffy2">

  <!-- Form container -->
  <div class="add-anime-container">
    <h1>Add New Anime</h1>

    <form method="POST" action="/add">
      <!-- Title -->
      <input 
        type="text" 
        name="title" 
        placeholder="Anime Title" 
        required>

      <!-- Description -->
      <textarea 
        name="description" 
        placeholder="Write a short summary of the anime" 
        required></textarea>

      <!-- Genre -->
      <input 
        type="text" 
        name="genre" 
        placeholder="Genre (e.g. Action, Adventure, Fantasy)" 
        required>

      <!-- Episodes -->
      <input 
        type="number" 
        name="episodes" 
        placeholder="Number of Episodes" 
        min="1" 
        required>

      <!-- Submit -->
      <button type="submit">Add Anime</button>
    </form>
  </div>
</body>
</html>